{
  "name": "big-school-backend",
  "version": "1.0.0",
  "description": "Backend para Big School - Autenticación y autorización con Clean Architecture + DDD",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node-pg-migrate up --migrations-dir migrations --migration-file-language sql",
    "migrate:down": "node-pg-migrate down --migrations-dir migrations --migration-file-language sql",
    "migrate:create": "node-pg-migrate create --migrations-dir migrations --migration-file-language sql"
  },
  "keywords": [
    "clean-architecture",
    "ddd",
    "hexagonal",
    "typescript",
    "authentication",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "node-pg-migrate": "^8.0.4",
    "supertest": "^7.2.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0"
  }
}
