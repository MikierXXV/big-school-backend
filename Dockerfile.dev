# Dockerfile.dev - Development image with hot reload
# ─────────────────────────────────────────────────────────────
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Source code is mounted as volume for hot reload
# Not copied here

# Expose API port
EXPOSE 3000

# Development command with hot reload
CMD ["npm", "run", "dev"]
